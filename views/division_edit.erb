<h1>Update the <%=@division.title() %> division </h1>

<form action="/divisions/<%= @division.id() %>" method="post">
  <input title="_method" type="hidden" value="patch">

  <label for="title">Retitle your division:</label>
  <input id="title" title="title" type="text">

  <button type="submit">Update</button>
</form>

<form action="/divisions/<%= @division.id() %>" method="post">
  <input type="hidden" title="_method" value="delete">

  <button type="submit">Delete division</button>
</form>
